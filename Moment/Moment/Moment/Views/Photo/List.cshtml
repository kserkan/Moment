@model IEnumerable<Moment.Models.Photo>

<h2>Uploaded Photos</h2>

@if (Model != null && Model.Any())
{
    <div class="row">
        @foreach (var photo in Model)
        {
            <div class="col-md-4">
                <div class="card mb-4">
                    <img src="data:@photo.ContentType;base64,@Convert.ToBase64String(photo.ImageData)" class="card-img-top" alt="@photo.Title" />
                    <div class="card-body">
                        <h5 class="card-title">@photo.Title</h5>
                        <p class="text-muted">Uploaded on: @photo.UploadDate.ToShortDateString()</p>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <p>No photos uploaded yet.</p>
}
