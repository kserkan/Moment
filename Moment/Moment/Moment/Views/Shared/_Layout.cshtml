<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Moment</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="/css/site.css" />
    
    <style>
        /* Navbar Hover Effects */
        .navbar-nav .nav-link {
            transition: color 0.3s ease-in-out;
        }
        .navbar-nav .nav-link:hover {
            color: #ffc107; /* Hover rengini sarı yapar */
        }

        /* Button Hover Effects */
        .btn {
            transition: background-color 0.3s ease, transform 0.2s ease;
        }

        .btn:hover {
            transform: scale(1.05);
        }

        /* Fade-in Animation */
        .fade-in {
            animation: fadeIn 0.5s ease-in-out;
        }

 

        /* Footer Styles */
        footer {
            background: #212529;
            color: white;
            text-align: center;
            padding: 10px 0;
            margin-top: 20px;
        }
        footer a {
            color: #ffc107;
            text-decoration: none;
        }
        footer a:hover {
            text-decoration: underline;
        }
    </style>
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            <a class="navbar-brand" href="/">Moment</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link" asp-action="Index" asp-controller="Home">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-action="Profile" asp-controller="Home">Profile</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-action="Favorites" asp-controller="Home">Favorites</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-danger" asp-action="Logout" asp-controller="Home">Logout</a>
                    </li>

                    
                    <li class="nav-item">
                        <a class="nav-link" asp-action="Feed" asp-controller="Home">Feed</a>
                    </li>


                </ul>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <main class="container fade-in mt-4">
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer>
        <p>&copy; @DateTime.Now.Year - Moment | <a href="/Privacy">Privacy Policy</a></p>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
